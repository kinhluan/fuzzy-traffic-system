<?xml version="1.0" encoding="UTF-8"?>
<!-- SUMO Node (Junction) Definition File -->
<!-- Defines a single 4-way intersection for fuzzy traffic light control -->
<nodes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/nodes_file.xsd">

    <!-- Central intersection with traffic light -->
    <node id="center" x="0.0" y="0.0" type="traffic_light" tl="center"/>

    <!-- Boundary nodes (entry/exit points) -->
    <!-- North boundary -->
    <node id="north_in" x="0.0" y="200.0" type="priority"/>
    <node id="north_out" x="0.0" y="250.0" type="priority"/>

    <!-- South boundary -->
    <node id="south_in" x="0.0" y="-200.0" type="priority"/>
    <node id="south_out" x="0.0" y="-250.0" type="priority"/>

    <!-- East boundary -->
    <node id="east_in" x="200.0" y="0.0" type="priority"/>
    <node id="east_out" x="250.0" y="0.0" type="priority"/>

    <!-- West boundary -->
    <node id="west_in" x="-200.0" y="0.0" type="priority"/>
    <node id="west_out" x="-250.0" y="0.0" type="priority"/>

</nodes>
